{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "pretty": true
  },
  "include": ["./src"]
}
